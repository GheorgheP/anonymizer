{
  "name": "anonymizer",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:chrome": "BROWSER=chrome rsbuild build --watch --env-mode development",
    "dev:firefox": "BROWSER=firefox rsbuild build --watch --env-mode development",
    "build": "pnpm run build:chrome && pnpm run build:firefox",
    "build:chrome": "BROWSER=chrome rsbuild build",
    "build:firefox": "BROWSER=firefox rsbuild build",
    "lint": "biome lint",
    "format": "biome format",
    "tscheck": "pnpm run tscheck:background && pnpm run tscheck:content && pnpm run tscheck:node",
    "tscheck:background": "tsc --project tsconfig.background.json",
    "tscheck:content": "tsc --project tsconfig.content.json",
    "tscheck:node": "tsc --project tsconfig.node.json"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@reduxjs/toolkit": "^2.9.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-redux": "^9.2.0",
    "tailwind-merge": "^3.3.1",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@rsbuild/core": "^1.5.14",
    "@rsbuild/plugin-react": "^1.4.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@types/webextension-polyfill": "^0.12.4",
    "autoprefixer": "^10.4.21",
    "lefthook": "^1.13.6",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3"
  }
}
